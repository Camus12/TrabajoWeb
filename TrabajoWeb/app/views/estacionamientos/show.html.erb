<h1>Viendo un Estacionamiento</h1>

<style type="text/css">
	td { 
    	padding: 2px;
	}
</style>

<%= form_for :estacionamientos, :html => {:class => "form-horizontal"} do |f| %>
	
	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :nombredescriptivo, "Nombre:" %>
		</div>
		<div class="col-sm-6">
			<%= @estacionamiento.nombredescriptivo %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :direccion, "Dirección:" %>
		</div>
		<div class="col-sm-10">
			<%= @estacionamiento.direccion %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-2">
			<%= f.label :direcciongooglemaps, "Google Maps:" %>
		</div>
		<div class="col-sm-10">
			<%= @estacionamiento.direcciongooglemaps %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-6">
			<div class="form-group">
				<div class="col-sm-4">
					<%= f.label :distrito, "Distrito:" %>
				</div>
				<div class="col-sm-7">
					<%= @estacionamiento.distrito %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-4">
					<%= f.label :numerotelefono, "Teléfono:" %>
				</div>
				<div class="col-sm-4">
					<%= @estacionamiento.numerotelefono %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-4">
					<%= f.label :precioporhora, "Precio por hora:" %>
				</div>
				<div class="col-sm-3">
					<%= @estacionamiento.precioporhora %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-4">
					<%= f.label "Dimensiones:" %>
				</div>
				<div class="col-sm-2">
					<%= f.label :largo %><br />
					<%= @estacionamiento.largo %>
				</div>
				<div class="col-sm-2">
					<%= f.label :ancho %><br />
					<%= @estacionamiento.ancho %>
				</div>
				<div class="col-sm-2">
					<%= f.label :altura %><br />
					<%= @estacionamiento.altura %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-4">
					<%= f.label :tipo, "Tipo:" %>
				</div>
				<div class="col-sm-4">
					<%= @estacionamiento.tipo %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-4">
					<%= f.label :ubicacion, "Ubicación:" %>
				</div>
				<div class="col-sm-4">
					<%= @estacionamiento.ubicacion %>
				</div>
			</div>

		</div>

		<div class="col-sm-6">
			<div class="form-group">
				<%= content_tag(:iframe, '', src: @is_direcciongooglemaps, width: 400, height: 250, frameborder: 0, style: "border:0", allowfullscreen: "allowfullscreen") %>
			</div>

			<div class="form-group">
				<table>
					<tr>
						<td>
							<%= image_tag "estacionamiento.PNG", height: "100", title: "Estacionamiento 1" %>
						</td>
						<td>
							<%= image_tag "estacionamiento.PNG", height: "100", title: "Estacionamiento 2" %>
						</td>
						<td>
							<%= image_tag "estacionamiento.PNG", height: "100", title: "Estacionamiento 3" %>
						</td>
					</tr>
					<tr>
						<td>
							<%= image_tag "estacionamiento.PNG", height: "100", title: "Estacionamiento 4" %>
						</td>
						<td>
							<%= image_tag "estacionamiento.PNG", height: "100", title: "Estacionamiento 5" %>
						</td>
						<td>
							
						</td>
					</tr>
				</table>
			</div>
		</div>
			
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-2">		
			<%= link_to 'Retroceder', { :action => :index }, :class => "btn btn-primary" %>
		</div>
		<div class="col-sm-2">
			<%= link_to 'Editar', { :action => :edit, :id => @estacionamiento.id }, :class => "btn btn-primary" %>
		</div>
	</div>
<% end %>