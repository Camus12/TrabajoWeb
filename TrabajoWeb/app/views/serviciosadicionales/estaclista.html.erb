<h1>Servicios Adicionales del Estacionamiento</h1>

<div class="form-horizontal">
	
	<div class="form-group">
		<div class="col-sm-2">
			<strong>Estacionamiento:</strong>
		</div>
		<div class="col-sm-6">		
			<%= text_field_tag :Estacionamiento, @estacionamiento.nombredescriptivo, { :class => "form-control", :disabled => true } %>
		</div>
	</div>
	
	<div class="container">
		<table class="table table-striped table-hover">
		    <thead>
				<tr>
					<th>Tipo</th>
					<th>Tarifa</th>
					<th>Descripción</th>
					<th></th>
					<th></th>
				</tr>
		    </thead>
		    <tbody>

		    	<% @estacionamiento.estacionamientoservicios.each do |servicio| %>
				<tr>
					<td><%= servicio.serviciosadicionale_id %></td>
					<td><%= servicio.tarifa %></td>
				  	<td></td>
				  	<td></td>
				  	<td>
				  		<%= link_to 'Eliminar', [servicio.estacionamiento, servicio],
				               :method => :delete,
				               :data => { :confirm => '¿Estás seguro?' } %>
				  	</td>
				</tr>
				<% end %>

				<tr>
					<td>Lavado de Vehículo</td>
					<td>10.00</td>
					<td>Con agua a presión y champú</td>
					<td><%= link_to "Editar", { :controller => "serviciosadicionales", :action => "estacedicion" } %></td>
					<td><%= link_to "Eliminar", { :controller => "serviciosadicionales", :action => "estacedicion" } %></td>
				</tr>
		    </tbody>
	  	</table>
	</div>
	
	<h2>Agregar Servicios Adicionales:</h2>
	<%= render "estacionamientoservicios/form" %>
	
	<div class="col-sm-4">		
		<%= link_to 'Retroceder', { :controller => :estacionamientos, :action => :index }, :class => "btn btn-primary" %>
	</div>
</div>