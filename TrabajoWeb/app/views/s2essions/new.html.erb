<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: socrates_path) do |f| %>
      <%= image_tag "logo.jpg", align: "center", height: "180", title: "Logo" %>
	  <h1 class="h3 mb-3 font-weight-normal">Ingrese sus datos</h1>
      <%= f.label :usuario %>
      <%= f.text_field :usuario, class: 'form-control' %>

      <%= f.label :contrasena %>
      <%= f.password_field :contrasena, class: 'form-control' %>

      <%= f.submit "Ingresar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>



