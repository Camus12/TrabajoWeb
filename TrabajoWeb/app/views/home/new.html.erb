<h1>Registrar Usuario</h1>





<%= form_for :Registrar , :html =>{ :method => :get, :class => "form-horizontal"} do |f|	%>
 
<div class ="form-group">
		<div class = "col-sm-2">
			<%=f.label :nombre %>
		 </div>
	
		<div class ="col-sm-8">
		 	<%=f.text_field :nombre, { :class => " form-control", :placeholder => "Ingrese Nombre"} %>
		 </div>
		 <div class = "col-sm-2">
		 </div>
	 </div> 

	 <div class ="form-group">
			<div class ="col-sm-2">
			<%=f.label :apepaterno,"Apellido Paterno" %> 
			</div>
			<div class ="col-sm-8">
		 	<%=f.text_field :apepaterno, { :class => " form-control", :placeholder => "Ingrese Apellido Paterno"} %>
			 </div>
			  <div class = "col-sm-2">
		 </div>

	 </div> 

	  <div class ="form-group">
		<div class ="col-sm-2">
		<%=f.label :apematerno,"Apellido Materno" %> 
		</div>
		<div class ="col-sm-8">
		 	<%=f.text_field :apematerno, { :class => " form-control", :placeholder => "Ingrese Apellido Materno"} %>
		 </div>
		  <div class = "col-sm-2">
		 </div>

	</div> 
  	<div class ="form-group">
		<div class ="col-sm-2">
		<%=f.label :tipousuario,"Tipo de Usuario" %> 
		</div>
		<div class="col-sm-10">
			<label class="radio-inline"><input type="radio" name="Tipo" checked>Dueño</label>
			<label class="radio-inline"><input type="radio" name="Tipo" checked>Cliente</label>

		</div> 
	</div> 

	  <div class ="form-group">
		<div class ="col-sm-2">
		<%=f.label :correo,"Correo" %> 
		</div>
		<div class ="col-sm-8">
		 	<%=f.text_field :correo, { :class => " form-control", :placeholder => "Ingrese Correo"} %>
		 </div>
		  <div class = "col-sm-2">
		 </div>

	</div> 


	  <div class ="form-group">
		<div class ="col-sm-2">
		<%=f.label :Correoconf,"Confirmar Correo" %> 
		</div>
		<div class ="col-sm-8">
		 	<%=f.text_field :Correoconf, { :class => " form-control", :placeholder => "Confirmar Correo"} %>
		 </div>
		  <div class = "col-sm-2">
		 </div>

	</div> 


		  <div class ="form-group">
		<div class ="col-sm-2">
		<%=f.label :contraseña,"Contraseña" %> 
		</div>
		<div class ="col-sm-8">
		 	<%=f.text_field :contraseña, { :class => " form-control", :placeholder => "Ingrese Contraseña"} %>
		 </div>
		  <div class = "col-sm-2">
		 </div>

	</div> 


		  <div class ="form-group">
		<div class ="col-sm-2">
		<%=f.label :Contraseñaconf,"Confirmar Contraseña" %> 
		</div>
		<div class ="col-sm-8">
		 	<%=f.text_field :Contraseñaconf, { :class => " form-control", :placeholder => "Confirmar Contraseña"} %>
		 </div>
		  <div class = "col-sm-2">
		 </div>

	</div> 

	<div class ="form-group">
		<div class="col-sm-2">
		<%=f.submit "Cancelar", :class => "btn btn-danger"%>
		</div>

		<div class="col-sm-10">
			<%=f.submit "Guardar", :class => "btn btn-primary"%>
		</div>

</div>



<% end %>